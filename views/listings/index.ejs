<% layout("/layouts/boilerplate") %>
<body>
    <!-- <h3 class="mt-3 mb-3 col-6 offset-5 text "><b>Airbnb Homes</b></h3> -->
    <!-- <form action="/listings/new" method="GET">
        <button>Create New Listing</button>
    </form> -->
    <style>
      #filters{
        margin-top: 1.5rem;
        margin-bottom: 1rem;
        display: flex;
        flex-wrap: wrap;
      }

      .filter{
        text-align: center;
        margin-right: 2.1rem;
        opacity: 0.8;
        cursor: pointer;
      }

      .filter:hover{
        opacity: 1;
      }

      .filter p{
        font-size: 0.8rem;
      }

      @media (max-width: 786px) {
        #filters {
          display: none;
    }
  }

    </style>

    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i> </div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Room</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-city"></i> </div>
        <p>Top cities</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach Fronts</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lake fronts</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-solid fa-person-shelter"></i></div>
        <p>Cabins</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree-city"></i></div>
        <p>Tree house</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-gopuram"></i></div>
        <p>Castle</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountain house</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-key"></i></div>
        <p>New</p>
      </div>

    </div>

   <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) {%>
      <div class="card card-listing" >
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img src="<%= listing.image.url%>" class="card-img-top"   alt="listing image" style="height: 17rem;">
          <div class="card-img-overlay">  </div>
          
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br>
              &#8377;<%= listing.price %> / night
            </p>
          </div>
        </a>
      </div>
      <% } %>
   </div>

  
</body>
